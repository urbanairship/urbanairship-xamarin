<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    BackgroundColor="#000000"
    xmlns:resources="clr-namespace:SampleApp"
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SampleApp.HomeViewController">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="40" Spacing="20">
            <StackLayout Padding="20">
                <Image Source="urbanairship_logo"/>
            </StackLayout>
            <Button Text="{x:Static resources:AppResources.enable_push}" Clicked="OnButtonClicked" x:Name="enablePushButton"/>
            <Button Text="{x:Static resources:AppResources.display_message_center}" Clicked="MessageCenterBtnClicked" x:Name="displayMessageCenterButton"/>
            <Button Text="{x:Static resources:AppResources.display_preference_center}" Clicked="PreferenceCenterBtnClicked" x:Name="displayPreferenceCenterButton"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
