<Project Sdk="Xamarin.Legacy.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <AssemblyTitle>AirshipBindings.NETStandard.Abstractions</AssemblyTitle>
    <AssemblyName>AirshipBindings.NETStandard.Abstractions</AssemblyName>
  </PropertyGroup>

  <PropertyGroup>
		<PackageId>airship.netstandard.abstractions</PackageId>
		<Title>Airship SDK</Title>
		<Summary>Airship SDK .NET Standard Library</Summary>
		<Description>A .NET Standard Library for the Airship SDK.</Description>
		<AssemblyVersion>$(AirshipCrossPlatformVersion)</AssemblyVersion>
		<PackageVersion>$(AirshipCrossPlatformNugetVersion)</PackageVersion>
		<!-- Include symbol files (*.pdb) in the built .nupkg -->
		<AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
	</PropertyGroup>

  <ItemGroup>
    <Compile Include="Channel\*" />
    <Compile Include="Analytics\*" />
    <Compile Include="Attributes\*" />
    <Compile Include="MessageCenter\*" />
    <Compile Include="IAirship.cs" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="..\..\SharedAssemblyInfo.CrossPlatform.cs">
      <Link>Properties\SharedAssemblyInfo.CrossPlatform.cs</Link>
    </Compile>
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Xamarin.Forms" Version="4.6.0.800" />
  </ItemGroup>
</Project>
