<Project Sdk="Xamarin.Legacy.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <AssemblyTitle>AirshipBindings.NETStandard</AssemblyTitle>
    <AssemblyName>AirshipBindings.NETStandard</AssemblyName>
  </PropertyGroup>

  <PropertyGroup>
		<PackageId>airship.netstandard</PackageId>
		<Title>Airship SDK</Title>
		<Summary>Airship SDK .NET Standard Library</Summary>
		<Description>A .NET Standard Library for the Airship SDK.</Description>
		<AssemblyVersion>$(AirshipCrossPlatformVersion)</AssemblyVersion>
		<PackageVersion>$(AirshipCrossPlatformNugetVersion)</PackageVersion>
		<!-- Include symbol files (*.pdb) in the built .nupkg -->
		<AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
	</PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\AirshipBindings.NETStandard.Abstractions\AirshipBindings.NETStandard.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\SharedAssemblyInfo.CrossPlatform.cs">
      <Link>Properties\SharedAssemblyInfo.CrossPlatform.cs</Link>
    </Compile>
    <Compile Include="Airship.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.Forms" Version="5.0.0.2244" />
  </ItemGroup>
</Project>
