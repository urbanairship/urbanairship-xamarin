<Project Sdk="Xamarin.Legacy.Sdk">
  <PropertyGroup>
    <NoBindingEmbedding>true</NoBindingEmbedding>
    <DisableExtraReferences>true</DisableExtraReferences>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <ProjectGuid>{BFFFE653-04CD-4563-BF2D-B6F31349F30D}</ProjectGuid>
    <OutputType>Library</OutputType>
    <RootNamespace>AirshipBindings.iOS.ExtendedActions</RootNamespace>
    <AssemblyName>airship.ios.extendedactions</AssemblyName>
    <AssemblyTitle>Airship iOS SDK - ExtendedActions</AssemblyTitle>
    <Description>Extended actions support for Airship SDK</Description>
    <TargetFrameworks>xamarin.ios10;net6.0-ios</TargetFrameworks>
    <NoNFloatUsing Condition="'$(TargetFramework)' == 'xamarin.ios10'">true</NoNFloatUsing>
    <Nullable>enable</Nullable>
    <ImplicitUsings>true</ImplicitUsings>
    <IsBindingProject>true</IsBindingProject>
    <IsTrimmable>true</IsTrimmable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <AssemblyVersion>$(AirshipIosVersion)</AssemblyVersion>
    <PackageVersion>$(AirshipIosNugetVersion)</PackageVersion>
    <IPhoneResourcePrefix>Resources</IPhoneResourcePrefix>
    <SupportedOSPlatformVersion>11.0</SupportedOSPlatformVersion>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>bin\Debug</OutputPath>
    <DefineConstants>DEBUG;</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>full</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>bin\Release</OutputPath>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <ItemGroup>
    <None Include="AirshipBindings.iOS.ExtendedActions.targets" Pack="True" PackagePath="build/AirshipBindings.iOS.ExtendedActions.targets" />
    <None Include="AirshipBindings.iOS.ExtendedActions.targets" Pack="True" PackagePath="buildTransitive/AirshipBindings.iOS.ExtendedActions.targets" />
  </ItemGroup>

  <!-- An iOS app project cannot find Xcframeworks within a NuGet if a TFM
       previous than net6.0-ios is used.
       https://github.com/xamarin/xamarin-macios/issues/13693
       You must include the Xcframework's NativeReference tag into the iOS app
       project so sidecar can work properly. -->
  <!-- This workaround was designed like this to have the same
       NativeReference tag for the iOS binding and for the .targets file -->
  <Import Project="AirshipBindings.iOS.ExtendedActions.targets" />
  <ItemGroup>
    <_NativeReference Include="../../frameworks/AirshipExtendedActions.xcframework">
        <_Id>$(_AirshipExtendedActionsId)</_Id>
    </_NativeReference>
  </ItemGroup>
  <!-- End of workaround -->

  <ItemGroup Condition="'$(TargetFramework)' == 'xamarin.ios10'">
    <Compile Remove="ApiDefinitions.cs" />
    <Compile Remove="StructsAndEnums.cs" />
  </ItemGroup>
  <ItemGroup>
    <ObjcBindingCoreSource Include="StructsAndEnums.cs" Condition=" '$(EnableDefaultCompileItems)' == 'true'" />
    <ObjcBindingApiDefinition Include="ApiDefinitions.cs" Condition=" '$(EnableDefaultCompileItems)' == 'true'" />
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\AirshipBindings.iOS.Core\AirshipBindings.iOS.Core.csproj">
    </ProjectReference>
    <ProjectReference Include="..\AirshipBindings.iOS.Basement\AirshipBindings.iOS.Basement.csproj">
    </ProjectReference>
  </ItemGroup>
</Project>
